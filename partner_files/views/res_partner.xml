
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Files">
                    <header>
                        <button name="action_create_file" string="Add File" type="object" class="oe_highlight"/>
                        <div class="o_file_search">
                            <input type="text" class="o_search_input" placeholder="Seach file..."/>
                        </div>
                    </header>
                    <field name="file_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="file_data" filename="name"/>
                            <field name="folder_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <menuitem id="partner_folder_menu_config"
          name="Folders"
          parent="base.menu_base_partner"
          groups="base.group_system"
          sequence="2"/>

        <menuitem id="partner_folder_menu"
            name="Folders"
            parent="partner_folder_menu_config"
            action="action_partner_folder"
            sequence="1"/>
</odoo>